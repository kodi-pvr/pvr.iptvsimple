      </group>
      <group id="2" label="30040">
       <setting id="logoFromEpg" type="integer" label="30041" help="30644">
          <level>0</level>
          <default>1</default>
          <constraints>
            <options>
              <option label="30042">0</option> <!-- IGNORE -->
